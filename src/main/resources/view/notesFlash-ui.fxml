<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rebrovdev.notesflash.controller.AppController">
    <left>
        <VBox spacing="10" styleClass="tool-panel">
            <Button onAction="#selectPen" text="Ручка"/>
            <Button onAction="#selectEraser" text="Стерка"/>
            <Button onAction="#clearCanvas" text="Очистить"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="canvasContainer" BorderPane.alignment="CENTER">
            <Canvas fx:id="backgroundCanvas"/>
            <Canvas fx:id="drawingCanvas"/>
        </StackPane>
    </center>

</BorderPane>
